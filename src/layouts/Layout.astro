---
import '~/assets/styles/tailwind.css';

import { I18N } from "~/utils/config";
import { Head } from 'astro-capo'
import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from "~/components/CustomStyles.astro"
import Metadata from '~/components/common/Metadata.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
const { language, textDirection } = I18N;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <Head>
    <meta name="keywords" content="Dandeli Place, nature resort, India, outdoor activities, wildlife, adventure, relaxation, Dandeli Wildlife Sanctuary, Kali River, Syntheri Rocks, Kavala Caves, Ulavi Temple, white water rafting, kayaking, coracle rides, jeep safaris, boat safaris, bird watching, trekking, camping, nature walks, jungle safaris, night safaris, ziplining, mountain biking, rock climbing, fishing, Dandeli weather, Dandeli map, Dandeli directions, Dandeli accommodation, Dandeli restaurants, Dandeli shopping, Dandeli travel tips, Dandeli festivals, Dandeli culture, Dandeli history, Dandeli education, Dandeli research, Dandeli conservation, Dandeli sustainable tourism, Dandeli white water rafting prices, Dandeli kayaking tours, Dandeli coracle rides booking, Dandeli jeep safari packages, Dandeli boat safari rates, Dandeli bird watching guide, Dandeli trekking trails, Dandeli camping sites, Dandeli nature walk tours, Dandeli jungle safari operators, Dandeli night safari cost, Dandeli ziplining prices, Dandeli mountain biking tours, Dandeli rock climbing instructors, Dandeli fishing packages">
    <CommonMeta />
    <CustomStyles />
    <Metadata {...metadata} />
  </Head>

  <body class="antialiased text-default bg-page tracking-tight">
    <slot />

    <BasicScripts />

    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
